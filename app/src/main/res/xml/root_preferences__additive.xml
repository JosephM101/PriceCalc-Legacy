<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="Region-based Configuration"></PreferenceCategory>
    <PreferenceCategory app:title="User Interface">
        <SwitchPreference
            android:defaultValue="false"
            android:key="autoCheckForUpdates"
            android:summary="Check for updates on app startup, and display a message if updates are available. To update manually, go to About > Check for Updates. WARNING: This may cause problems."
            android:title="Check for Updates Automatically"
            android:visibility="invisible" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="showWelcomeScreen_Preference"
            android:summary="When PriceCalc is started"
            android:title="Show welcome screen" />
    </PreferenceCategory>

    <PreferenceCategory app:title="User Interface">
        <ListPreference
            android:key="appTheme_Preference"
            android:defaultValue="1"
            android:entries="@array/theme_settings"
            android:entryValues="@array/theme_settings_val"
            android:summary="Change the theme of the app."
            android:title="App Theme"
            android:dialogTitle="Change app theme" />

    </PreferenceCategory>
</PreferenceScreen>